<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/row_padding"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/table_padding">

        <RelativeLayout
            android:id="@+id/modify_image_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height"
            android:layout_marginBottom="@dimen/row_margin"
            android:background="@drawable/row_selector"
            android:paddingLeft="@dimen/row_padding_left"
            android:paddingRight="@dimen/row_padding_right">

            <TextView
                android:id="@+id/modify_person_image_title"
                style="@style/text_black_16"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:drawablePadding="4dp"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="@string/modify_person_image" />

            <ImageView
                android:id="@+id/modify_image_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:src="@drawable/go" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/table_background"/>

        <RelativeLayout
            android:id="@+id/modify_nickName_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height"
            android:layout_marginBottom="@dimen/row_margin"
            android:background="@drawable/row_selector"
            android:paddingLeft="@dimen/row_padding_left"
            android:paddingRight="@dimen/row_padding_right">

            <TextView
                android:id="@+id/modify_person_nickName_title"
                style="@style/text_black_16"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:drawablePadding="4dp"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="@string/modify_nickName_title" />

            <ImageView
                android:id="@+id/modify_nickName_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:src="@drawable/go" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/table_background"/>

        <RelativeLayout
            android:id="@+id/address_manager_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height"
            android:layout_marginBottom="@dimen/row_margin"
            android:background="@drawable/row_selector"
            android:paddingLeft="@dimen/row_padding_left"
            android:paddingRight="@dimen/row_padding_right">

            <TextView
                android:id="@+id/address_manager_title"
                style="@style/text_black_16"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:drawablePadding="4dp"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="@string/address_manager" />

            <ImageView
                android:id="@+id/address_manager_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:src="@drawable/go" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/table_background"/>

        <RelativeLayout
            android:id="@+id/phone_number_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height"
            android:layout_marginBottom="@dimen/row_margin"
            android:background="@drawable/row_selector"
            android:paddingLeft="@dimen/row_padding_left"
            android:paddingRight="@dimen/row_padding_right">

            <TextView
                android:id="@+id/phone_number_title"
                style="@style/text_black_16"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:drawablePadding="4dp"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="@string/phone_number" />

            <ImageView
                android:id="@+id/phone_number_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:src="@drawable/go" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/table_background"/>

        <RelativeLayout
            android:id="@+id/reset_password_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height"
            android:layout_marginBottom="@dimen/row_margin"
            android:background="@drawable/row_selector"
            android:paddingLeft="@dimen/row_padding_left"
            android:paddingRight="@dimen/row_padding_right">

            <TextView
                android:id="@+id/reset_password_title"
                style="@style/text_black_16"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:drawablePadding="4dp"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="@string/reset_password_title" />

            <ImageView
                android:id="@+id/modify_password_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:src="@drawable/go" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/table_background"/>

        <RelativeLayout
            android:id="@+id/exit_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height"
            android:layout_marginBottom="@dimen/row_margin"
            android:background="@drawable/row_selector"
            android:paddingLeft="@dimen/row_padding_left"
            android:paddingRight="@dimen/row_padding_right">

            <TextView
                android:id="@+id/exit_title"
                style="@style/text_black_16"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:drawablePadding="4dp"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="@string/exit_title" />

            <ImageView
                android:id="@+id/exit_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:src="@drawable/go" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/table_background"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@color/white" />

</LinearLayout>