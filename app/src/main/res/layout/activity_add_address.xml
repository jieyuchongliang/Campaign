<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.fujisoft.campaign.AddAddressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">
                <EditText
                    android:id="@+id/address_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:background="@drawable/shape_add_address"
                    android:gravity="center"
                    android:hint="@string/address_name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/common_title_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">
                <EditText
                    android:id="@+id/address_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:background="@drawable/shape_add_address"
                    android:gravity="center"
                    android:hint="@string/phone"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:textSize="@dimen/common_title_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:id="@+id/layoutClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:onClick="layoutClick"
                    android:background="@drawable/shape_add_address"
                    android:gravity="center"
                    android:maxLines="1">

                    <TextView
                        android:id="@+id/address_province"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_province"
                        android:onClick="proClick"
                        android:textSize="@dimen/common_title_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/" />
                    <TextView
                        android:id="@+id/address_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_city"
                        android:onClick="cityClick"
                        android:textSize="@dimen/common_title_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/" />
                    <TextView
                        android:id="@+id/address_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_area"
                        android:onClick="areaClick"
                        android:textSize="@dimen/common_title_size" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">
                <EditText
                    android:id="@+id/address_street"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:background="@drawable/shape_add_address"
                    android:gravity="center"
                    android:hint="@string/address_street"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/common_title_size" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">
            <Button
                android:id="@+id/address_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:background="@drawable/btn_nomal_shape"
                android:text="@string/address_add"
                android:textColor="@color/white"
                android:textSize="15sp" />
            </LinearLayout>
    </LinearLayout>
</LinearLayout>