<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/goods_detail_layout_margin"
        android:layout_marginRight="@dimen/goods_detail_layout_margin"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/goods_standards_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:gravity="center|left"
            android:text="@string/goods_detail_goods_size_title"
            android:textSize="@dimen/goods_detail_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/goods_standards_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.85"
            android:orientation="horizontal"
            android:text="test" />
    </LinearLayout>
</LinearLayout>